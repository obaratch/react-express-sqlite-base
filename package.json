{
  "name": "react-express-sqlite-base",
  "version": "0.0.0",
  "description": "a micro react-express-sqlite app scafforld",
  "engines": {
    "node": ">=15"
  },
  "main": "main.js",
  "scripts": {
    "start-dev": "run-p serve-dev watch",
    "serve-dev": "cross-env NODE_ENV=dev nodemon app-server/src/main.js | pino-pretty -c -t SYS:'yyyy-mm-dd HH:MM:ss.l' -i hostname",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack serve --content-base app-client/dist",
    "build": "webpack"
  },
  "author": "Obalab",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.4",
    "css-loader": "^5.1.3",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "config": "^3.3.6",
    "core-js": "^3.9.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pino": "^6.11.2",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2",
    "statman-stopwatch": "^2.12.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "lodash"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "app-client/*",
      "webpack.config.js",
      "log/*",
      "*/node_modules/*",
      "*/test/*"
    ]
  }
}
